@model IEnumerable<ModelosEvaluativos.Models.EvaluationModel>

@{
    ViewData["Title"] = "Modelos Evaluativos";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p>En esta página se podrán administrar los diferentes modelos evaluativos</p>
</div>

<br>


<p>
    <a asp-controller="EvaluationModel" asp-action="Create">Crear nuevo modelo</a>
</p>

<div>
    <table class="table">
        <thead>
            <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.estado)
                    </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>


