@model ModelosEvaluativos.Models.EvaluationModel

<h2 class="p-2 m-2">Crear Nuevo Modelo Evaluativo</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateModel" method="post" class="p-2 m-2">
    <div class="form-group">
        <label>Nombre</label><input asp-for="nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label>Descripcion</label><input asp-for="descripcion" class="form-control" />
    </div>
    <div class="form-group">
        <label>Estado</label><input asp-for="estado" class="form-control" />
    </div>
    <br>
    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
 </form>